<div class="searchForm">
    <form method="Post" class="col-md-12 searchbox" action="Search">
        <div class="col-xs-3">
            <input type="text" class="form-control" style="position: relative" name="name" placeholder="Image name...">
        </div>
        
        <div class="col-xs-3">
            <input type="text" class="form-control" style="position: relative" name="imagetype" placeholder="Image type...">
        </div>
        
        <div class="col-xs-3">
            <input type="text" class="form-control" style="position: relative" name="author" placeholder="Author...">
        </div>
        <button type="submit" class="btn btn-primary btn-md" id="SearchButton">Search</button>
    </form>
</div>